    <%=barber.name %>
  </p>
<% end %>

 
<form action="/visit" method="POST">



  <div class="mb-3">
    <label>Ваше имя</label>
    <input name="client[name]" type="text" class="form-control ccc" placeholder="Введите ваше имя" value="">
  </div>

 <div class="mb-3">
    <label>Ваш телефон</label>
    <input name="client[phone]" type="text" class="form-control ccc" placeholder="Введите ваш телефон" value="">
  </div>

  <div class="mb-3">
    <label>Когда вас ждать</label>
    <input name="client[datestamp]"
      type="text" class="form-control ccc"
    placeholder="Введите дату и время" value="">
    <label></label>
  </div>

